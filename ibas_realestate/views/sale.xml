    </record>



    <menuitem id="menu_sale_downpayment_rate" 
      name= "Down Payment Rate" 
      groups="base.group_system" 
      parent="sale.menu_sale_config"
      action="open_sale_downpayment_rate"
      sequence="99"/>

    <menuitem id="menu_sale_interest_rate" 
