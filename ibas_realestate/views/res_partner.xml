<odoo>
<data>
    <record id="ibas_re_customer_view_form" model="ir.ui.view">
        <field name="name">res.partner.view.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//page" position="before">
                <page string="Principal Buyer">
                </page>
                <page string="Co-Buyer Info">
                </page>
                <page string="Financial References">
                </page>
                <page string="Personal References">
                </page>
                <page string="Requirements">
                </page>
            </xpath>
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="age"/>
                <field name="place_of_birth"/>
                <field name="education_attain"/>
                <field name="office_landline"/>
                <field name="have_co_buyer"/>
            </xpath>

            <xpath expr="//label[@name='address_name']" position="replace">
                <label for="" name="address_name">
                    <b>Address</b>
                </label>
            </xpath>
            <xpath expr="//field[@name='vat']" position="after">
                <field name="civil_status" attrs="{'invisible': [('is_company','=', True)]}"/>
                <field name="sex" attrs="{'invisible': [('is_company','=', True)]}"/>
                <field name="citizenship" attrs="{'invisible': [('is_company','=', True)]}"/>
                <field name="birthdate" attrs="{'invisible': [('is_company','=', True)]}"/>
                <field name="occupation" attrs="{'invisible': [('is_company','=', True)]}"/>
            </xpath>

            <xpath expr="//field[@name='property_payment_term_id']" position="before">
                <field name="is_ofw" attrs="{'invisible': [('is_company','=', True)]}"/>
                <field name="duration_stay" attrs="{'invisible': [('is_company','=', True)]}"/>
                <field name="home_ownership" attrs="{'invisible': [('is_company','=', True)]}"/>
                <field name="employer_name" attrs="{'invisible': [('is_company','=', True)]}"/>
                <field name="monthly_income" attrs="{'invisible': [('is_company','=', True)]}"/>
                <field name="buying_reason" attrs="{'invisible': [('is_company','=', True)]}"/>
                <field name="source_awareness" attrs="{'invisible': [('is_company','=', True)]}"/>
            </xpath>

            <xpath expr="//page[@name='sales_purchases']" position="before">
              <page name="spouse" string="Spouse Info" attrs="{'invisible': [('is_company','=', True)]}">
                    <group>
                        <group>
                            <field name="spouse_name" attrs="{'readonly': [('civil_status','!=', 'Married')]}"/>
                            <field name="spouse_citizenship" attrs="{'readonly': [('civil_status','!=', 'Married')]}"/>
                            <field name="spouse_birthday" attrs="{'readonly': [('civil_status','!=', 'Married')]}"/>
                            <field name="spouse_mobile" attrs="{'readonly': [('civil_status','!=', 'Married')]}"/>
                            <field name="spouse_occupation" attrs="{'readonly': [('civil_status','!=', 'Married')]}"/>
                            <field name="spouse_employer" attrs="{'readonly': [('civil_status','!=', 'Married')]}"/>
                        </group>
                        <group>
                        <field name="spouse_designation" attrs="{'readonly': [('civil_status','!=', 'Married')]}"/>
                        <field name="spouse_contact" attrs="{'readonly': [('civil_status','!=', 'Married')]}"/>
                        <field name="spouse_office_address" attrs="{'readonly': [('civil_status','!=', 'Married')]}"/>
                        <field name="spouse_tin" attrs="{'readonly': [('civil_status','!=', 'Married')]}"/>
                        <field name="spouse_monthly_income" attrs="{'readonly': [('civil_status','!=', 'Married')]}"/>
                        </group>
                    </group>
                </page>

                <page name="spa" string="SPA Info" attrs="{'invisible': [('is_company','=', True)]}">
                    <group>
                        <group>
                            <field name="spa_name"/>
                            <field name="spa_citizenship"/>
                            <field name="spa_birthday"/>
                            <field name="spa_mobile"/>
                            <field name="spa_contact"/>
                            <field name="spa_relationship"/>
                        </group>
                        <group>
                        
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</data>
</odoo>