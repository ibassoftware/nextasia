<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

  <record id="ibasre_project_view_form" model="ir.ui.view">
    <field name="name">ibas_realestate.project.view.form</field>
    <field name="model">ibas_realestate.project</field>
    <field name="arch" type="xml">
      <form string="">
        <sheet>
          <group>
            <group>
              <field name="name"/>
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="ibasre_project_view_tree" model="ir.ui.view">
    <field name="name">ibas_realestate.project.view.tree</field>
    <field name="model">ibas_realestate.project</field>
    <field name="arch" type="xml">
      <tree string="Projects">
        <field name="name"/>
      </tree>
    </field>
  </record>

  <record id="ibas_re_project_action" model="ir.actions.act_window">
    <field name="name">Projects</field>
    <field name="res_model">ibas_realestate.project</field>
    <field name="view_mode">tree,form</field>
    <field name="domain">[]</field>
  </record>

  <menuitem
    id="ibas_re_menu"
    name="Real Estate"
    web_icon="ibas_realestate,static/src/img/house.png"
    sequence="10"/>

    <menuitem
      id="re_project_menu"
      name="Projects"
      action="ibas_re_project_action"
      parent="ibas_re_menu"
      sequence="10"/>

    
  <record id="ire_property_view_form" model="ir.ui.view">
    <field name="name">ibas_realestate.property.view.form</field>
    <field name="model">product.product</field>
    <field name="arch" type="xml">
      <form string="Property">
      <header>
        <button string="Tech Hold" name="tech_hold" type="object" class="oe_highlight" states="contracted"/>
        <button string="Get Requirements" name="get_requirements" type="object" class="oe_highlight" attrs="{'invisible' :[('reservation_line_ids', '!=', [])]}"/>
        <button string="Process Booked Sale" name="booked_sale" type="object" class="oe_highlight" states="reserved"/>
        <button string="Process Contracted Sale" name="contracted_sale" type="object" class="oe_highlight" states="booked"/>
        <button string="Back to Reservation" name="back_to_reservation" type="object" states="booked"/>
        <button string="Back to Booked" name="back_to_booked" type="object" states="contracted"/>
        <field name="state" widget="statusbar"/>
      </header>
        <sheet>
        <strong><field name="name" invisible="1"/></strong>
          <group>
            <group>
            <field name="project_id" required="1"/>
            <field name="block" required="1"/>
            <field name="lot" required="1"/>
            <field name="phase" required="1"/>
            <field name="propmodel_id" required="1"/>
            <field name="propclass_id" required="1"/>
            <field name="floor_area" required="1"/>
            <field name="lot_area" required="1"/>
            <field name="list_price" widget="monetary"/>
            <field name="preselling_price" widget="monetary"/>
            <field name="responsible"/>
            <field name="dp_terms" required="1"/>
            <field name="categ_id"/>        
            </group>
            <group>
            <!-- <field name="is_a_property"/> -->
              <field name="customer"/>
              <field name="financing_type"/>
              <field name="contractor"/>
              <field name="construction_start_date"/>
              <field name="construction_end_date"/>
              <field name="actual_construction_complete_date"/>
              <field name="last_dp_date"/>
            </group>
          </group>
        </sheet>

        <sheet>
        <notebook>
        <page string="Requirements">
        <group>
        <label for='reservation_line_ids' string="RESERVATION" colspan="5" style="font-size:13px; padding: 5px; vertical-align: middle; margin-top:0px; text-align:left; background-color: green; color:white; border:1px solid grey;"/>
        <field name="reservation_line_ids" nolabel="1" attrs="{'readonly': [('state','!=','reserved')]}">
            <tree editable="bottom">
              <field name="requirement" options="{'no_open':1,'no_create':1,'no_create_edit':1}"/>
              <field name="compliance_date"/>
              <field name="requirement_file"/>
              <field name="complied"/>
            </tree>
          </field>
        </group>
        <group>
        <label for='booked_sale_line_ids' string="BOOKED SALE" colspan="5" style="font-size:13px; padding: 5px; vertical-align: middle; margin-top:0px; text-align:left; background-color: green; color:white; border:1px solid grey;"/>
        <field name="booked_sale_line_ids" nolabel="1" attrs="{'readonly': [('state','!=','booked')]}">
            <tree editable="bottom">
              <field name="requirement" options="{'no_open':1,'no_create':1,'no_create_edit':1}"/>
              <field name="compliance_date"/>
              <field name="requirement_file"/>
              <field name="complied"/>
            </tree>
          </field>
        </group>
        <group>
        <label for='contracted_sale_line_ids' string="CONTRACTED SALE" colspan="5" style="font-size:13px; padding: 5px; vertical-align: middle; margin-top:0px; text-align:left; background-color: green; color:white; border:1px solid grey;"/>
        <field name="contracted_sale_line_ids" nolabel="1" attrs="{'readonly': [('state','!=','contracted')]}">
            <tree editable="bottom">
              <field name="requirement" options="{'no_open':1,'no_create':1,'no_create_edit':1}"/>
              <field name="compliance_date"/>
              <field name="requirement_file"/>
              <field name="complied"/>
            </tree>
          </field>
        </group>
        </page>
        <page string="Price History">
          <div colspan="5" col="5" style="padding: 5px; margin-right: 5px; margin-top: 3px; border: 1px solid black">
            <button name="%(action_ibas_realestate_update_sale_price_wiz)d" colspan="5" type="action" string="Update Price" class="oe_highlight"/>
          </div>
          <group>
          <field name="price_history_line_ids" nolabel="1" readonly="0">
            <tree editable="bottom">
              <field name="effective_date"/>
              <field name="selling_price"/>
              <field name="pre_selling_price"/>
              <field name="user_id"/>
            </tree>
          </field>
          </group>
        </page>
        </notebook>
        </sheet>

         <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers"/>
                <field name="activity_ids" widget="mail_activity"/>
                <field name="message_ids" widget="mail_thread"/>
         </div>


      </form>
    </field>
  </record>

  <record id="ire_property_view_tree" model="ir.ui.view">
    <field name="name">ibas_realestate.property.view.tree</field>
    <field name="model">product.product</field>
    
    <field name="arch" type="xml">
      <tree string="Properties">
        <field name="name"/>
        <field name="project_id"/>
        <field name="customer"/>
        <field name="phase"/>
        <field name="propmodel_id"/>
        <field name="propclass_id"/>
        <field name="state"/>
        <field name="responsible"/>
      </tree>
    </field>
  </record>

  <record id="ibas_re_view_kanban" model="ir.ui.view">
    <field name="name">product.product.view.kanban</field>
    <field name="model">product.product</field>
    <field name="inherit_id" ref="product.product_kanban_view"/>
    <field name="arch" type="xml">
      <xpath expr="//div[@name='tags']" position="before">
        <div>
        <button string="Open Property" name="open_view_form" 
        type="object" attrs="{'invisible': [('is_a_property', '!=', True)]}"> Open Property </button> 
        </div>
        <field name="is_a_property" invisible="1"/>
      </xpath>
    </field>
  </record>

  <record id="ire_ibas_property_action" model="ir.actions.act_window">
    <field name="name">Properties</field>
    <field name="res_model">product.product</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{
   'default_type': 'service',
   'default_is_a_property': True,
   'default_sale_ok': True,
   }</field>
    <field name="domain">[('is_a_property','=',True)]</field>
  </record>

